{
  "info": {
    "_postman_id": "tap-to-pay-collection",
    "name": "Tap-to-Pay API",
    "description": "API collection for Tap-to-Pay Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/health",
          "host": ["{{base_url}}"],
          "path": ["health"]
        }
      },
      "response": []
    },
    {
      "name": "Create Payment Intent",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"amount\": 1000000, \"merchant_id\": \"test-merchant-001\"}"
        },
        "url": {
          "raw": "{{base_url}}/payment_intents",
          "host": ["{{base_url}}"],
          "path": ["payment_intents"]
        }
      },
      "response": []
    },
    {
      "name": "Get Payment Status",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/payment_intents/{{payment_intent_id}}/status",
          "host": ["{{base_url}}"],
          "path": ["payment_intents", "{{payment_intent_id}}", "status"]
        }
      },
      "response": []
    },
    {
      "name": "Get Payment Page",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/pay/{{payment_intent_id}}",
          "host": ["{{base_url}}"],
          "path": ["pay", "{{payment_intent_id}}"]
        }
      },
      "response": []
    },
    {
      "name": "Get Merchant Payments",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/merchants/{{merchant_id}}/payments",
          "host": ["{{base_url}}"],
          "path": ["merchants", "{{merchant_id}}", "payments"]
        }
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3001"
    },
    {
      "key": "payment_intent_id",
      "value": ""
    },
    {
      "key": "merchant_id",
      "value": "test-merchant-001"
    }
  ]
}
